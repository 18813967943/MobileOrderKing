<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/d300dp"
    android:layout_height="@dimen/d45dp"
    android:background="@color/mainColor"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/nameEditor"
        android:layout_width="@dimen/d180dp"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:background="@mipmap/bg_edittext"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:lines="1"
        android:textColor="#000"
        android:textSize="12sp" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="@dimen/d50dp"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:background="@drawable/common_oringe_btn"
        android:text="@string/confirm"
        android:textColor="#fff"
        android:textSize="14sp" />

    <Button
        android:id="@+id/cancle"
        android:layout_width="@dimen/d50dp"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:background="@drawable/common_oringe_btn"
        android:text="@string/cancel"
        android:textColor="#fff"
        android:textSize="14sp"/>

</LinearLayout>