<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context=".ui.MainActivity">
    <!--android:fitsSystemWindows="true"-->
    <RelativeLayout
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d50dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageButton
                android:background="@null"
                android:id="@+id/getback"
                android:paddingLeft="@dimen/d8dp"
                android:clickable="true"
                android:paddingRight="@dimen/d8dp"
                android:src="@drawable/huitui_selector"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageButton
                android:id="@+id/forward"
                android:padding="@dimen/d8dp"
                android:background="@null"
                android:src="@drawable/qianjin_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/jingzhun"
                android:background="@null"
                android:padding="@dimen/d8dp"
                android:src="@drawable/jingzhun_selector"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>


<com.lejia.mobile.orderking.view.TitlesView
    android:layout_centerInParent="true"
    android:id="@+id/title"
    android:layout_width="@dimen/d300dp"
    android:layout_height="match_parent" />
<LinearLayout
    android:gravity="center_vertical"
    android:layout_alignParentRight="true"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <ImageButton
        android:id="@+id/zhouce"
        android:padding="@dimen/d8dp"
        android:background="@null"
        android:src="@drawable/zhouce_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/threed"
        android:background="@null"
        android:padding="@dimen/d8dp"
        android:src="@drawable/d3_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/more"
        android:layout_marginRight="5dp"
        android:padding="@dimen/d8dp"
        android:background="@null"
        android:src="@drawable/more_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>



    </RelativeLayout>

</RelativeLayout>