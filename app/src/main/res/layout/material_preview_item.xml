<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="3dp">

    <ImageView
        android:id="@+id/materialPreview"
        android:layout_width="@dimen/d70dp"
        android:layout_height="@dimen/d70dp"
        android:background="@mipmap/place_img_white"
        android:scaleType="center" />

    <TextView
        android:id="@+id/materialName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d15dp"
        android:layout_gravity="bottom"
        android:background="#35000000"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingLeft="3dp"
        android:textColor="#fff"
        android:textSize="9sp" />

</FrameLayout>